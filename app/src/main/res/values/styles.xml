<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<style name="MenuSyle" parent="Theme.AppCompat.Light">

    <item name="android:background"> @android:color/white </item>

</style>
    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">
            false
        </item>
        <item name="windowNoTitle">
            true
        </item>
        <item name="android:windowFullscreen">
            true
        </item>
    </style>

    <string-array name="types">
        <item>
            إستشاري تربوي

        </item>
        <item>
                        إستشاري طبي

        </item>
    </string-array>



    <style name="AppTheme2.NoActionBar" parent="AppTheme2" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme2.TitleText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppTheme2.SubTitleText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme2.TitleText.Dark" parent="AppTheme2.TitleText" >
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme2.SubTitleText.Dark" parent="AppTheme2.SubTitleText" >
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="createEventToolbarItems">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="createEventItemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6.5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="createEventIconStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginTop">15.5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">8.5dp</item>
        <item name="android:layout_marginEnd">8.5dp</item>
        <!--<item name="android:layout_margin">8.5dp</item>-->
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/not_available</item>
    </style>

    <style name="createEventSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ddd</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
    </style>

</resources>