                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="270dp"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="1dp"
                    />
                <RadioButton
                    android:id="@+id/b33"
